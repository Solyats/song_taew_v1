  <script>
    const handleSubmit = async () => {
        let formValues = null;
        let isSuccess = false;

        while (!isSuccess) {
          // แสดงฟอร์มการสมัครสมาชิก
          const { value } = await Swal.fire({
            title: "สมัครสมาชิก",
            confirmButtonText: "สมัครสมาชิก",
            html:
              '<input id="username" class="swal2-input" placeholder="ชื่อผู้ใช้">' +
              '<input id="gmail" class="swal2-input" placeholder="อีเมล">' +
              '<input id="password" type="password" class="swal2-input" placeholder="รหัสผ่าน">' +
              '<input id="confirmPassword" type="password" class="swal2-input" placeholder="ยืนยันรหัสผ่าน">',
            focusConfirm: false,
            preConfirm: () => {
              return {
                username: document.getElementById("username").value,
                gmail: document.getElementById("gmail").value,
                password: document.getElementById("password").value,
                confirmPassword: document.getElementById("confirmPassword").value,
              };
            },
            allowOutsideClick: false, // ไม่อนุญาตให้ปิดฟอร์มด้วยการคลิกภายนอก
            allowEscapeKey: false, // ไม่อนุญาตให้ปิดฟอร์มด้วยการกดปุ่ม Escape
          });

          if (value) {
            // ตรวจสอบว่ารหัสผ่านตรงกันหรือไม่
            if (value.password !== value.confirmPassword) {
              await Swal.fire({
                icon: "error",
                title: "รหัสผ่านไม่ตรงกัน",
                text: "กรุณาตรวจสอบรหัสผ่านและยืนยันรหัสผ่านให้ตรงกัน!",
                allowOutsideClick: false,
                allowEscapeKey: false,
              });
              continue; // แสดงฟอร์มการสมัครสมาชิกใหม่อีกครั้ง
            }

            // ตรวจสอบรูปแบบอีเมล
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(value.gmail)) {
              await Swal.fire({
                icon: "error",
                title: "อีเมลไม่ถูกต้อง",
                text: "กรุณากรอกอีเมลให้ถูกต้อง!",
                allowOutsideClick: false,
                allowEscapeKey: false,
              });
              continue; // แสดงฟอร์มการสมัครสมาชิกใหม่อีกครั้ง
            }

            formValues = value;

            try {
              // ส่งคำขอ POST ด้วย Axios
              const response = await axios.post("/api/v1/register", {
                username: formValues.username,
                password: formValues.password,
                gmail: formValues.gmail,
              });

              if (response.data.success) {
                // จัดการกับการตอบสนองที่สำเร็จ
                console.log("API Response:", response.data);
                await Swal.fire({
                  icon: "success",
                  title: "สมัครสมาชิกสำเร็จ",
                  showConfirmButton: false,
                  timer: 1500,
                  allowOutsideClick: false,
                  allowEscapeKey: false,
                });
                isSuccess = true; // การสมัครสมาชิกสำเร็จ
              } else if (response.data.error === "username_taken") {
                // แจ้งเตือนเมื่อชื่อผู้ใช้ซ้ำ
                await Swal.fire({
                  icon: "error",
                  title: "ชื่อผู้ใช้ซ้ำ",
                  text: "ชื่อผู้ใช้นี้ถูกใช้ไปแล้ว กรุณาใช้ชื่อผู้ใช้อื่น.",
                  allowOutsideClick: false,
                  allowEscapeKey: false,
                });
              } else{
                // แจ้งเตือนเมื่อมีข้อผิดพลาดอื่น ๆ
                  // จัดการกับการตอบสนองที่สำเร็จ
                console.log("API Response:", response.data);
                await Swal.fire({
                  icon: "success",
                  title: "สมัครสมาชิกสำเร็จ",
                  showConfirmButton: false,
                  timer: 1500,
                  allowOutsideClick: false,
                  allowEscapeKey: false,
                });
                isSuccess = true; // การสมัครสมาชิกสำ
                
              }
            } catch (error) {
              // จัดการกับการตอบสนองที่มีข้อผิดพลาด
              console.error("API Error:", error);
              await Swal.fire({
                icon: "error",
                title: "ไม่สำเร็จ",
                text: "สมัครสมาชิกไม่สำเร็จ! กรุณาลองอีกครั้ง.",
                allowOutsideClick: false,
                allowEscapeKey: false,
              });
            }
          }
        }
      };

      $(document).ready(function () {
        const isError = "<%- error %>";

        if (isError === "no_user") {
          handleSubmit();
        }
      });

