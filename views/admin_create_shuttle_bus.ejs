      <div class="text-center text-3xl">
        <span>จัดการรถโดยสาร</span>
      </div>

      <div class="flex justify-between">
        <a href="/admin_list_shuttle_bus" class="btn-main">กลับ</a>
        <button id="btn_create_shuttlebus" class="btn-main">บันทึก</button>
      </div>


      <div class="shadow-md mt-10">

        <div class="grid grid-cols-4 p-4 gap-2">
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group w-full">
              <label class="block mb-2">รหัสรถ:</label>
              <input id="inp_busstop_subname" class="form-control border border-gray-300 p-2 rounded w-full"
                name="inp_name" />
            </div>
          </div>
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">ชื่อสายรถ:</label>
              <input id="inp_shuttle_name" type="text" class="form-control border border-gray-300 p-2 rounded w-full"
                name="inpt_short_name" />
            </div>
          </div>
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group w-full">
              <label class="block mb-2">ชื่อหมายเลขสายรถ:</label>
              <input id="inp_busstop_thName" class="form-control border border-gray-300 p-2 rounded w-full" name="inp_name" />
            </div>
          </div>
         
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">สีรถ:</label>
              <input id="inp_busstop_color" class="form-control border border-gray-300 p-2 rounded w-full"
                name="inp_color" />
            </div>
          </div>
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">เวลาเริ่มต้น:</label>
              <input id="inp_start_time" type="time" class="form-control border border-gray-300 p-2 rounded w-full"
                name="inp_start_time" oninput="updateTimeRange()" />
            </div>
          </div>
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">เวลาสิ้นสุด:</label>
              <input id="inp_end_time" type="time" class="form-control border border-gray-300 p-2 rounded w-full"
                name="inp_end_time" oninput="updateTimeRange()" />
            </div>
          </div>
         
          <script>
            function updateTimeRange() {
              const startTime = $('#inp_start_time').val();
              const endTime = $('#inp_end_time').val();
              const timeRange = startTime && endTime ? `${startTime} - ${endTime}` : '--:-- - --:--';
              $('#time_range_display').text(timeRange);
              $('#inp_busstop_time').val(timeRange).trigger('change'); // Trigger change event
            }
          </script>
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">เวลาทำการ:</label>
              <input id="inp_busstop_time" type="text" class="form-control border border-gray-300 p-2 rounded w-full"
                name="inpt_time"  />
            </div>
          </div>
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mx-8">
              <label class="block mb-2">ค่าบริการ:</label>
              <input id="inp_busstop_price" class="form-control border border-gray-300 p-2 rounded w-full" type="number"
                name="inp_price" />
            </div>
          </div>
          
          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">สีเส้นรถ:</label>
              <div class="flex content-center mt-2 form-control border border-gray-300 p-2 mb-1 rounded w-full">
              <input type="color" id="polylineColorVar" name="polylineColorVar" value="#ff0000">
              <p>สีที่เลือก: <span id="selectedColorpoly">#ff0000</span></p>
              </div>

            </div>
          </div>


          <div class="col-span-4 lg:col-span-1">
            <div class="form-group mr-8 w-full">
              <label class="block mb-2">สีสัญลักณ์:</label>
              <div class="flex content-center mt-2 form-control border border-gray-300 p-2 mb-1 rounded w-full">
                <input type="color" id="symbolColorVar" name="polylineColorVar" value="#ff0000">
                <p>สีที่เลือก: <span id="selectedColor">#ff0000</span></p>
              </div>
          
            </div>
          </div>
          <div class="col-span-4 lg:col-span-1 ">
            <div class="form-group mr-8 w-full ">
              <label class="block mb-2">รูปรถ:</label>
              <div class=" border">
                <input id="inp_busstop_picture" type="file" class="" name="inp_image" />
              </div>
            </div>


          </div>
          </div>
        
         
        </div>
